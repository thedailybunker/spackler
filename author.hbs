{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{#author}}
<section class="site-hero {{#if cover}}" style="background-image: url({{cover}}){{else}}site-hero-no-cover{{/if}}">
  <div class="site-hero-header">
    {{#if image}}
      <div class="author-image" style="background-image: url({{image}})">{{name}}'s Picture</div>
    {{/if}}

    <h1 class="site-hero-title">{{name}}</h1>

    {{#if bio}}
      <p class="author-bio">{{bio}}</p>
    {{/if}}

    <div class="author-meta">
      <ul>
        {{#if website}}
          <li class="author-link"><span class="icon-website"></span><a href="{{website}}" target="_blank">{{website}}</a></li>
        {{/if}}
        {{#if location}}
          <li class="author-location"><span class="icon-location"></span>{{location}}</li>
        {{/if}}
        <li class="author-stats"><span class="icon-posts"></span>{{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</li>
      </ul>
    </div>
  </div>

  <div class="overlay"></div>
</section>
{{/author}}

{{! The main content area on the homepage }}
<main class="site-main" role="main">

  {{! The tag below includes the post loop - partials/loop.hbs }}
  {{> "loop"}}
</main>
